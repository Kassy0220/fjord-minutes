<% set_meta_tags(build_meta_tags(title: 'ダッシュボード', description: 'ダッシュボードページです。')) %>
<div class="bg-blue-700">
  <h1 class="page_header">管理ページ</h1>
</div>

<div class="page_body">
  <div class="flex flex-col items-center md:flex-row md:gap-x-8">
    <% @courses.each do |course| %>
      <div class="w-[500px] p-4 border-dashed border-2 border-blue rounded-md mb-4" data-course="<%= course.id %>">
        <h2 class="text-lg text-blue-700 font-bold mb-4 md:text-2xl"><%= course.name %></h2>
        <p class="mb-2">
          <span class="after:content-[':']">MTG</span>
          <%= Course.human_attribute_name("meeting_week.#{course.meeting_week}") %></span>
        </p>
        <p class="mb-2">
          <% if course.minutes.none? %>
            まだ議事録は作成されていません
          <% else %>
            <%= link_to "最新の議事録 (#{l(course.meetings.order(:date).last.date, format: :ymd_slash)})", edit_minute_path(course.meetings.order(:date).last.minute) %>
          <% end %>
        </p>
        <ul class="pl-0 mt-4 flex gap-x-4">
          <li class="list-none py-4 w-40 border border-blue-700 rounded-md hover:bg-blue-50">
            <%= link_to course_minutes_path(course), class: "block flex flex-col items-center" do %>
              <svg class="w-12 h-12 mb-2 text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M6 2a2 2 0 0 0-2 2v15a3 3 0 0 0 3 3h12a1 1 0 1 0 0-2h-2v-2h2a1 1 0 0 0 1-1V4a2 2 0 0 0-2-2h-8v16h5v2H7a1 1 0 1 1 0-2h1V2H6Z" clip-rule="evenodd" />
              </svg>
              <span class="font-bold">議事録</span>
            <% end %>
          </li>
          <li class="list-none py-4 w-40 border border-blue-700 rounded-md hover:bg-blue-50">
            <%= link_to course_members_path(course), class: "block flex flex-col items-center" do %>
              <svg class="w-12 h-12 mb-2 text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 6a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Zm-1.5 8a4 4 0 0 0-4 4 2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 4 4 0 0 0-4-4h-3Zm6.82-3.096a5.51 5.51 0 0 0-2.797-6.293 3.5 3.5 0 1 1 2.796 6.292ZM19.5 18h.5a2 2 0 0 0 2-2 4 4 0 0 0-4-4h-1.1a5.503 5.503 0 0 1-.471.762A5.998 5.998 0 0 1 19.5 18ZM4 7.5a3.5 3.5 0 0 1 5.477-2.889 5.5 5.5 0 0 0-2.796 6.293A3.501 3.501 0 0 1 4 7.5ZM7.1 12H6a4 4 0 0 0-4 4 2 2 0 0 0 2 2h.5a5.998 5.998 0 0 1 3.071-5.238A5.505 5.505 0 0 1 7.1 12Z" clip-rule="evenodd" />
              </svg>
              <span class="font-bold">メンバー</span>
            <% end %>
          </li>
          <li class="list-none py-4 w-40 border border-blue-700 rounded-md hover:bg-blue-50">
            <%= link_to course.repository_url, target: "_blank", rel: "noreferrer", class: "block flex flex-col items-center" do %>
              <svg class="w-12 h-12 mb-2 text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z" clip-rule="evenodd" />
              </svg>
              <span class="font-bold">GitHub</span>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
